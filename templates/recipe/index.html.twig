{% extends 'base.html.twig' %}

{% block title %}Toutes les Recettes!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>List Recipe! ✅</h1>
    <a class="btn btn-primary btn-sm" href="{{path('recipe.create')}}">Créer une recette</a>
    <table class="table">
        <thead>
            <tr>
                <th> Titre</th>
                <th> Action</th>

            </tr>
        </thead>
        <tbody>
            {% for recipe in recipes %}
            <tr>
                <td>
                    <a href="{{path('recipe.show',{id: recipe.id, slug: recipe.slug})}}">{{recipe.title}}</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{path('recipe.edit',{id: recipe.id})}}">Editer</a>
               
                    <form action = "{{ path('recipe.delete',{id: recipe.id})}}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                   
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
  
   
</div>
{% endblock %}
